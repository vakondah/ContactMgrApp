@model IEnumerable<Contact>
@{ 
    ViewBag.Title = "Contact Manager";// will be displayed in the browser tab
}

<!--link goes to controller Contact...Tag Helpers need to be imported _ViewImports-->
<!--Link to add Contakt page-->
<a asp-controller="Contact"asp-action="Add"class="ml-2">Add Contact</a>
<!--Display Contact Table-->
<table class="table mt-2">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Contact contact in Model)
        {
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Contact"
                   asp-route-id="@contact.ContactId"
                   asp-route-slug="@contact.Slug">@contact.FirstName</a>
            </td>
            <td>
                <a asp-action="Details" asp-controller="Contact"
                   asp-route-id="@contact.ContactId"
                   asp-route-slug="@contact.Slug">@contact.LastName</a>
            </td>
            <td>@contact.Phone</td>
            <td>@contact.Email</td>
            <td>@contact.Category.Name</td>
        </tr>


        }
    </tbody>
</table>